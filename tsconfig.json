{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@fintech/ui": ["./packages/ui/src"],
      "@fintech/hooks": ["./packages/hooks/src"],
      "@fintech/lib": ["./packages/lib/src"],
      "@fintech/types": ["./packages/types/src"],
      "@fintech/config": ["./packages/config/src"],
      "@fintech/validation": ["./packages/validation/src"]
    }
  },
  "exclude": ["node_modules"]
}
